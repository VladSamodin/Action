@model IEnumerable<MvcPL.Models.Bid.BidViewModel>

@{
    AjaxOptions ajaxPageOptions = new AjaxOptions()
    {
        UpdateTargetId = "list",
        LoadingElementId = "loadingElement"
    };
}



@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            There are no bids
        </td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)$
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.ActionLink(item.Lot.Name, "Details", "Lot", new { id = item.Lot.Id }, null)
            </td>
            <td>
                @Html.ActionLink(item.User.Name, "Details", "User", new { id = item.User.Id }, null)
            </td>
        </tr>
    }
}
