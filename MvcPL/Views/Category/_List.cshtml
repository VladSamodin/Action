@model IEnumerable<MvcPL.Models.Category.CategoryViewModel>

@{
    AjaxOptions ajaxPageOptions = new AjaxOptions()
    {
        UpdateTargetId = "list",
        LoadingElementId = "loadingElement"
    };
}



@if (Model.Count() == 0)
{
    <tr>
        <td colspan="4">
            There are no categories
        </td>
    </tr>
}
else
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Category", new { id = item.Id }, null) | 
                @Html.ActionLink("Delete", "Delete", "Category", new { id = item.Id }, null)
            </td>
        </tr>
    }
}