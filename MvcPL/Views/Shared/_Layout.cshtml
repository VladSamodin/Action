<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div id="container" class="minWidth">
        <header>
            <div class="top-panel__logo">
                <span class="top-panel__logo__item">My Auction</span>
            </div>
            
                @using (Html.BeginForm("Search", "Lot", FormMethod.Get, new { id = "search-top", Class = "top-panel__search", name="search_top" }))
                {
                    @Html.TextBox("searchString", "",new { Class = "search-string", maxlength = "255", placeholder = "Введите название лота"});
                    <input class="top-panel__search__btn" type="submit" value="Найти" />
                }
        </header>
        
        <main id="middle-content" class="middle cfix">
            <div id="mn-layout__inner" class="mn-layout__inner">
                <nav class="mn-layout__col-1">
                    @Html.Partial("_Menu")
                </nav>
                <div class="mn-layout__col-2">
                    Right col
                    @RenderBody()
                </div>
            </div>
        </main>

    </div>
    
    
    <footer class="minWidth">
        <span>My Auction &copy; 2015</span>
    </footer>
        

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
